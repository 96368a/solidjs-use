{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "preserveSymlinks": false,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve",
    "allowJs": true,
    "jsxImportSource": "solid-js",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "importsNotUsedAsValues": "error",
    "paths": {
      "@solidjs-use/shared": ["./packages/shared/src/index.ts"],
      "@solidjs-use/shared/*": ["./packages/shared/src/*"],
      "@solidjs-use/solid-to-vue": ["./packages/solid-to-vue/src/index.ts"],
      "@solidjs-use/solid-to-vue/*": ["./packages/solid-to-vue/src/*"],
      "solidjs-use": ["./packages/core/src/index.ts"],
      "solidjs-use/*": ["./packages/core/src/*"],
      "@solidjs-use/integrations": ["./packages/integrations/src/index.ts"],
      "@solidjs-use/integrations/*": ["./packages/integrations/src/*"],
      "@solidjs-use/test-utils": ["./packages/.test/index.ts"],
      "@solidjs-use/docs-utils": ["./packages/docs/src/utils/index.ts"],
      "@solidjs-use/docs-components": ["packages/docs/src/components/index.ts"],
      "@solidjs-use/math": ["./packages/math/src/index.ts"],
      "@solidjs-use/rxjs": ["./packages/rxjs/src/index.ts"]
    },
    "types": ["cypress", "vite/client", "@types/web-bluetooth"]
  },
  "include": ["packages", "packages/.test/*.tsx", "packages/.test/*.ts", "meta", "scripts", "unocss-css.d.ts"],
  "exclude": ["node_modules", "**/*.md", "**/dist"]
}
